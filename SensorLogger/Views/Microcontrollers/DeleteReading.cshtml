@model SensorLogger.Models.Reading

@{
    ViewData["Title"] = "DeleteReading";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Reading</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ReadingID)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ReadingID)
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ReadingValues)
        </dt>
        <dd class="col-sm-10">
            @foreach (var _readingvalue in Model.ReadingValues)
            {
                @Html.DisplayFor(model => _readingvalue.Value)
                <text> </text>
                @Html.DisplayFor(model => _readingvalue.ValueType)
                <br />
            }
        </dd>
    </dl>

    <form asp-action="DeleteReading">
        <input type="hidden" asp-for="ReadingID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
